<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Account">

        <Preference
            android:id="@+id/settings_button_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:title="Create account"
            app:useSimpleSummaryProvider="true" />
        <Preference
            android:id="@+id/settings_button_account_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:title="View details"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Cloud sync - requires account">

        <SwitchPreferenceCompat
            android:id="@+id/settings_switch_sync"
            app:key="sync"
            app:summaryOff="All data stored locally"
            app:summaryOn="All data synced to cloud"
            app:title="Use cloud data sync" />

        <Preference
            android:id="@+id/settings_button_delete_cloud_data"

            app:summary="Required before deleting account"
            app:title="Delete cloud data and use local storage"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
    <PreferenceCategory android:title="DANGER ZONE!!!!">

        <Preference
            android:id="@+id/settings_button_delete_all_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:summary="WARNING: NOT REVERSIBLE!! YOU HAVE BEEN WARNED"
            app:title="Delete ALL data"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>